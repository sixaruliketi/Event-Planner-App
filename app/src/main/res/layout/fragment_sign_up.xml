<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/signUpGoBackBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/square_corner_bg"
        android:drawableLeft="@drawable/ic_arrow_back"
        android:text="Sign Up"
        android:textColor="@color/white"
        android:backgroundTint="@color/title_text_color"
        android:textSize="19sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/signUpFullNameTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Full Name"
        android:textColor="@color/title_text_color"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/signUpGoBackBtn"
        android:layout_marginStart="15dp"
        android:layout_marginTop="30dp"/>

    <EditText
        android:id="@+id/signUpFullNameET"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="text"
        android:text="Enter Full Name"
        android:textColor="@color/title_text_color"
        android:textColorHint="@color/title_text_color"
        android:layout_marginEnd="15dp"
        android:background="@drawable/square_corner_bg"
        app:layout_constraintTop_toBottomOf="@id/signUpFullNameTxt"
        app:layout_constraintStart_toStartOf="@id/signUpFullNameTxt"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/signUpEmailTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email"
        android:textColor="@color/title_text_color"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="@id/signUpFullNameTxt"
        app:layout_constraintTop_toBottomOf="@id/signUpFullNameET"/>

    <EditText
        android:id="@+id/signUpEmailET"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:text="Enter Email"
        android:textColor="@color/title_text_color"
        android:textColorHint="@color/title_text_color"
        android:layout_marginEnd="15dp"
        android:background="@drawable/square_corner_bg"
        app:layout_constraintStart_toStartOf="@id/signUpFullNameET"
        app:layout_constraintEnd_toEndOf="@id/signUpFullNameET"
        app:layout_constraintTop_toBottomOf="@id/signUpEmailTxt"/>

    <TextView
        android:id="@+id/signUpPasswordTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Password"
        android:textColor="@color/title_text_color"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="@id/signUpEmailTxt"
        app:layout_constraintTop_toBottomOf="@id/signUpEmailET"/>

    <EditText
        android:id="@+id/signUpPasswordET"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPassword"
        android:hint="Enter Password"
        android:textColor="@color/title_text_color"
        android:textColorHint="@color/title_text_color"
        android:background="@drawable/square_corner_bg"
        app:layout_constraintStart_toStartOf="@id/signUpEmailET"
        app:layout_constraintEnd_toEndOf="@id/signUpEmailET"
        app:layout_constraintTop_toBottomOf="@id/signUpPasswordTxt"/>

    <TextView
        android:id="@+id/signUpConfirmPasswordTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Confirm Password"
        android:textColor="@color/title_text_color"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="@id/signUpPasswordTxt"
        app:layout_constraintTop_toBottomOf="@id/signUpPasswordET"/>

    <EditText
        android:id="@+id/signUpConfirmPasswordET"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:hint="Confirm Password"
        android:textColor="@color/title_text_color"
        android:textColorHint="@color/title_text_color"
        android:background="@drawable/square_corner_bg"
        app:layout_constraintStart_toStartOf="@id/signUpPasswordET"
        app:layout_constraintEnd_toEndOf="@id/signUpPasswordET"
        app:layout_constraintTop_toBottomOf="@id/signUpConfirmPasswordTxt"/>

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/signUpBtn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_arrow_forward"
        android:layout_marginTop="40dp"
        android:backgroundTint="@color/title_text_color"
        android:paddingVertical="13dp"
        app:layout_constraintStart_toStartOf="@id/signUpConfirmPasswordET"
        app:layout_constraintEnd_toEndOf="@id/signUpConfirmPasswordET"
        app:layout_constraintTop_toBottomOf="@id/signUpConfirmPasswordET"/>
</androidx.constraintlayout.widget.ConstraintLayout>